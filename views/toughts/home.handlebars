<div class="home-header">
  {{#if search}}
    <h1>Você está buscando por <span>{{search}} ?</span></h1>
    {{#if toughtsQty}}
      <p>Foram encontrados <span>{{toughtsQty}}</span> wikes </p>
    {{else}}
      <p>Nenhum WIKE foi encontrado para o termo:
        <span>{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1>WIKE DevOps Explique as melhores soluções e faça as melhores! <span>WIKIS</span> </h1>
  {{/if}}
  <form action="/" method="GET">
    <input
      type="text"
      name="search"
      placeholder="Está buscando alguma coisa?"
    />
    <input type="submit" class="btn" value="Buscar" />
  </form>
  <div class="order-container">
    <span>Ordenar por: </span>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"> <i class="bi bi-arrow-up"></i> </button>
    </form>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"> <i class="bi bi-arrow-down"></i> </button>
    </form>
    <a href="/">Limpar</a>
  </div>
</div>
<div class="toughts-container">
  {{#each toughts}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <figcaption>por <span>{{this.User.name}}</span></figcaption>
    </figure>
  {{/each}}
</div>